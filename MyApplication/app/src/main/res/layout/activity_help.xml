<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthActivity"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="@drawable/back"
    android:gravity="center_horizontal">
    <EditText
        android:id="@+id/msg"
        android:layout_margin="30dp"
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:padding="20dp"
        android:gravity="top"
        android:hint="Type the Message to send to your helping members.... "
        android:background="#ffffff"
        />
    <Button
        android:id="@+id/starty"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:onClick="startservice"
        android:textSize="85dp"
        android:outlineAmbientShadowColor="@android:color/holo_purple"
        android:background="@drawable/start"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/txtstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#4B0082"
        android:text="Press to Start the Security"
        android:textStyle="bold"/>
</LinearLayout>
